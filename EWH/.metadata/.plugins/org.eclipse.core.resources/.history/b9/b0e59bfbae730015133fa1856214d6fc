package targetPairs;

public class targetPairs {

	public static void main(String[] args) {
		pairs(5, 3);

	}

	// Return pairs within range that add to target
	public static void pairs (int range, int target) {
		if (range == 0 && target != 0) {
			System.out.println("Not valid range");
			return;
		}
		int[] r = new int[range];
		for (int i = 0; i < range; i++) {		//create array of range
			r[i] = i + 1;
		}
		int k = 0;
		int j = r.length - 1;
		for (int i : r) {
			System.out.println(i);
		}
		while (k < j) {
			System.out.println(r[k] + r[j] == target);
			if (r[k] + r[j] == target) {
				System.out.println("(" + k + "," + j + ")");
			}
			else if (r[k] + r[j] < target) {
				k++;
			}
			else j++;
		}
	}
}
