package targetPairs;

public class targetPairs {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		pairs(5, 3);

	}

	// Return pairs within range that add to target
	public static void pairs (int range, int target) {
		if (range == 0 && target != 0) {
			System.out.println("Not valid range");
			return;
		}
		int[] r = new int[range];
		for (int i = 0; i < range; i++) {		//create array of range
			r[i] = i + 1;
		}
		int i = 0;
		int j = r.length - 1;
		System.out.println(r[j]);
		System.out.println(r[i]);
		System.out.println(r[i] + r[j]);
		while (i < j) {
			if (r[i] + r[j] == target) {
				System.out.println("(" + i + "," + j + ")");
			}
			else if (r[i] + r[j] < target) {
				i++;
			}
			else j++;
		}
	}
}
