package targetPairs;

public class targetPairs {

	public static void main(String[] args) {
		// Testing
		pairs(6,7);
		pairs(0,0);
		paris
	}

	// Return pairs within range that add to target of unique numbers
	public static void pairs (int range, int target) {
		if (range == 0 || range < 0 || target == 0 || target < 0) {
			System.out.println("Not valid range or target");
			return;
		}
		int[] r = new int[range];
		for (int i = 0; i < range; i++) {			// create array of range
			r[i] = i + 1;
		}
		int k = 0;
		int j = r.length - 1;
		while (k < j) {
			if (r[k] + r[j] == target) {
				System.out.println("(" + r[k] + "," + r[j] + ")");
				j--;
			}
			else if (r[k] + r[j] < target) k++;		// sum too small
			else if (r[k] + r[j] > target) j--;		// sum too large
			else System.out.println("No valid pairs");
		}
	}
}
