{
  "manifest_version": 2,
  "name": "Trial Reader",
  "description": "A chrome extension which can show RSS feeds",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://*.firebaseio-demo.com; object-src 'self'",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://phloxblog.in/",
    "cookies", 
    "tabs", 
    "http://*/*", 
    "https://*/*",
    "http://gateway-a.watsonplatform.net/*",
    "http://d3js.org/d3.v3.min.js",
    "storage"
  ],
  "background" : {
    "scripts" : ["js/background.js"],
    "persistent" : false
  }
  // "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
